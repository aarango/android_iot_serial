<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.felhr.serialportexample.MainActivity"
    android:keepScreenOn="true">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/serial_port"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="#FFFFFF" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@+id/textView1"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:visibility="invisible">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonSend"
        style="?borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@+id/editText1"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignRight="@+id/editText1"
        android:layout_marginTop="42dp"
        android:text="Send" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonSend"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="On/Off-1"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="On/Off-2"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="On/Off-3"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="On/Off-4"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="On/Off-5"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="2RMS"
                android:textSize="8sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button6"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Data N1"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Data N2"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Data N3"
                android:textSize="8sp" />


            <Button
                android:id="@+id/button9"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Data N4"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button10"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Data N5"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="1RMS"
                android:textSize="8sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button13"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="ASNE1"
                android:textSize="8sp" />


            <Button
                android:id="@+id/button14"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="OUT1"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button15"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="OUT2"
                android:textSize="8sp" />
            <Button
                android:id="@+id/button16"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="OUT3"
                android:textSize="8sp" />
            <Button
                android:id="@+id/button17"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="OUT4"
                android:textSize="8sp" />
            <Button
                android:id="@+id/button24"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="R4851"
                android:textSize="8sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button18"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="ASNE2"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button19"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="OUT1"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button20"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="OUT2"
                android:textSize="8sp" />
            <Button
                android:id="@+id/button21"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="OUT3"
                android:textSize="8sp" />
            <Button
                android:id="@+id/button22"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="OUT4"
                android:textSize="8sp" />
            <Button
                android:id="@+id/button23"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="R4851"
                android:textSize="8sp" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>